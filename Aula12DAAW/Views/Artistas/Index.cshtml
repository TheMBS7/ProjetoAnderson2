@model ProjetoAnderson2.Models.PesquisaArtista

@{
    ViewData["Title"] = "Index";
}

<h1>Artistas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Artistas" asp-action="Index" method="get">
    <p>

        País:
        <select asp-for="PaisSelecionado" asp-items="Model.PaisDeNascimento2">
            <option value="">Todos</option>
        </select>

        Nome: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Pesquisar" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artistas![0].Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artistas![0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model =>  model.Artistas![0].DataDeNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model =>  model.Artistas![0].PaisDeNascimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Artistas!) {
        <tr>
            <td>
                <img src=".\fotos\@{ @item.Imagem }" width="250" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisDeNascimento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
